{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["overview", "sections"],
  "properties": {
    "overview": {"type": "string"},
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "bullets"],
        "properties": {
          "title": {"type": "string"},
          "bullets": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    }
  }
}
